@model LeaveRequestViewModel

@{
    ViewData["Title"] = "Details";
    string className;
    string headingText;
    if(Model.Approved == null)
    {
        headingText = "Pending Approval";
        className = "warning";
    }
    else if(Model.Approved == true)
    {
        headingText = "Approved";
        className = "success";
    }
    else
    {
        headingText = "Rejected";
        className = "danger";
    }
}

<h1>Leave Request Details</h1>

<div class="alert alert-@className" role="alert">
    <h4 class="alert-heading">@headingText</h4>
    <hr />
    <p>
        <strong>Employee Name:</strong> @Model.Employee.FirstName @Model.Employee.LastName
    </p>
    <hr />
    <p>
        <strong>Date Requested</strong> @Html.DisplayFor(model => model.DateRequested)
    </p>
</div>

<div>
    <h4>LeaveRequest</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate</dd>
        <dt class="col-sm-2">Leave Type</dt>
        <dd class="col-sm-10">@Model.LeaveType.Id</dd>
        <dt class="col-sm-2">Date Requested</dt>
        <dd class="col-sm-10">@Model.DateRequested</dd>
        <dt class="col-sm-2">Requests Comments</dt>
        <dd class="col-sm-10">@Model.RequestsComments</dd>
        <dt class="col-sm-2">Approved</dt>
        <dd class="col-sm-10">@Model.Approved</dd>
        <dt class="col-sm-2">Cancelled</dt>
        <dd class="col-sm-10">@Model.Cancelled</dd>
        <dt class="col-sm-2">Requesting Employee ID</dt>
        <dd class="col-sm-10">@Model.RequestingEmployeeId</dd>
    </dl>
</div>
<div>
    <a asp-action="ChangeApprovalStatus" asp-route-id="@Model?.Id" asp-route-status="true">Approve</a>
    <a asp-action="ChangeApprovalStatus" asp-route-id="@Model?.Id" asp-route-status="false">Deny</a>
    <a asp-action="Index">Back to List</a>
</div>
