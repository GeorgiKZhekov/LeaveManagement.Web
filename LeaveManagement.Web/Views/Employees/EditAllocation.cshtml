@model LeaveManagement.Web.Models.LeaveAllocationEditViewModel

@{
    ViewData["Title"] = "EditAllocation";
}

<h1>Edit @Model.LeaveType?.Name Allocation for @Model.Employee.FirstName @Model.Employee.LastName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAllocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LeaveTypeId" />
            <input type="hidden" asp-for="EmployeeId" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label"></label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Period" class="control-label"></label>
                <input asp-for="Period" class="form-control" />
                <span asp-validation-for="Period" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <a asp-action="ViewAllocations" asp-route-id="@Model.EmployeeId" class="btn btn-dark">Back</a>
                <input type="submit" value="Save changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


